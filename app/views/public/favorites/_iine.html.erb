<% if user_signed_in? && !current_user.guest_user? %>
  <% if post.favorited_by?(current_user) %>
    <%= link_to post_favorites_path(post),method: :delete, remote: true, id: "favorite-link-#{post.id}" do %>
      <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
      <%= post.favorites.count %> いいね
    <% end %>
  <% else %>
    <%= link_to post_favorites_path(post), method: :post, remote: true, id: "favorite-link-#{post.id}" do %>
      <i class="fas fa-heart" aria-hidden="true"></i>
      <%= post.favorites.count %> いいね
    <% end %>
  <% end %>
<% else %>
  <i class="fas fa-heart" aria-hidden="true"></i>
    <%= post.favorites.count %> いいね
<% end %>