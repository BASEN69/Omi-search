
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="mb-5"><%= @user == current_user ? "#{@user.nick_name} さんのマイページ" : "#{@user.nick_name}　さんの投稿一覧" %></h2>
      <div class="row">
        <% @posts.order(created_at: :desc).each do |post| %>
          <div class="col-md-12 mb-4">
            <div class="card">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-3">
                    <% if post.images.attached? %>
                      <%= image_tag post.images[0], size: '200x200', class: 'img-fluid card-img-top' %>
                    <% else %>
                      <%= image_tag 'no_image', size: '200x200', class: 'img-fluid card-img-top' %>
                    <% end %>
                  </div>
                  <div class="col-md-9">
                    <table class="table table-bordered mb-3">
                      <thead>
                        <tr class="table-active">
                          <th scope="col" style="width: 30%">商品名</th>
                          <th scope="col" style="width: 40%">商品説明</th>
                          <% if post.user == current_user %>
                            <th scope="col" style="width: 15%"><%= link_to "編集", edit_post_path(post), class: "btn btn-success" %></a></th>
                            <th scope="col" style="width: 15%"><%= link_to "削除", post_path(post), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？"  %></th>
                          <% end %>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td><%= post.name %></td>
                          <td><%= link_to post.introduction.truncate(15, omission: "　続きを読む"), post_path(post.id) %></td>
                        </tr>
                      </tbody>
                    </table>
                    <table class="table table-bordered">
                      <thead>
                        <tr class="table-active">
                          <th scope="col" style="width: 50%">タグ</th>
                          <th scope="col" style="width: 30%">ユーザー</th>
                          <th scope="col" style="width: 20%">都道府県</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td><%= post.category %></td>
                          <td><%= link_to user_path(post.user_id) do %><%= post.user.nick_name %><% end %></td>
                          <td><%= link_to genre_path(post.genre.id) do %><%= post.genre.name %><% end %></td>
                        </tr>
                      </tbody>
                    </table>
                    <p><%= link_to "詳細を見る", post_path(post.id) %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <%= paginate @posts, class: "pagination justify-content-center" %>
        </div>
      </div>
    </div>
    <% if @user == current_user %>
      <p class="mt-5">
        <a class="btn btn-primary" data-toggle="collapse" href="#multiCollapseExample" role="button" aria-expanded="false" aria-controls="multiCollapseExample"><%= current_user.nick_name %> さんの登録情報</a>
      </p>
      <div class="row">
        <div class="col">
          <div class="collapse multi-collapse" id="multiCollapseExample">
            <div class="card card-body">
              <div class="col-md-10">
                <table class="table table-bordered mb-3">
                  <thead>
                    <tr class="table-active">
                      <th scope="col" style="width: 30%">氏名</th>
                      <th scope="col" style="width: 30%">ニックネーム</th>
                      <th scope="col" style="width: 40%">e-mail</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td><%= @user.name %></td>
                      <td><%= @user.nick_name %></td>
                      <td><%= @user.email %></td>
                    </tr>
                  </tbody>
                </table>
                <p><%= link_to '編集', edit_user_path(@user), class: 'btn btn-success' %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
</div>