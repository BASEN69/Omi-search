<div class="container">
  <div class ="row">
    <div class="col-md-10">
      <h2>ジャンル一覧</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">ジャンル名</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <th scope="col"><%= genre.name %></th>
            <th scope="col"><%= link_to "編集", edit_genre_path(genre) %></th>
            <th scope="col"><%= link_to "削除", genre_path(genre), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？"  %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to "登録", new_genre_path %>
    </div>
  </div>
</div>